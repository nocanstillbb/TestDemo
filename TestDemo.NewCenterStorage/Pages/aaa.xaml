    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:db="clr-namespace:DrawingBoard.Controls;assembly=DrawingBoard"
    xmlns:local="clr-namespace:TestDemo.NewCenterStorage.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Tag="图层控件"
    mc:Ignorable="d">
    <Grid>
        <db:Board
            Background="C:\Users\hbb\Desktop\平面图.png"
            BackgroundGridOffsetX="0"
            BackgroundGridOffsetY="0"
            BackgroundGridSideLen="10">

            <Canvas Name="layer1" AllowDrop="True">
                <db:LayerElement
                    EnableDrag="True"
                    Left="20"
                    Top="20">
                    <TextBlock Background="Pink" Text="layer1" />
                </db:LayerElement>
            </Canvas>


            <Canvas Name="layer2">
                <db:LayerElement
                    CenterModel="Center"
