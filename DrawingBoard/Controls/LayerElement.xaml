<UserControl
    x:Class="DrawingBoard.Controls.LayerElement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:DrawingBoard.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DrawingBoard.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    AllowDrop="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ReciprocalConverter x:Key="reciprocal" />
    </UserControl.Resources>
    <UserControl.RenderTransform>
        <ScaleTransform x:Name="stf" ScaleX="{Binding RelativeSource={RelativeSource AncestorType=local:Board}, Path=stf.ScaleX, Converter={StaticResource reciprocal}}" ScaleY="{Binding RelativeSource={RelativeSource AncestorType=local:Board}, Path=stf.ScaleY, Converter={StaticResource reciprocal}}" />
    </UserControl.RenderTransform>
    <ContentPresenter Content="{Binding RelativeSource={RelativeSource AncestorType=local:LayerElement}, Path=Child}" />
</UserControl>
